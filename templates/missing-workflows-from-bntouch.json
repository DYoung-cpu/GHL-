      "status": "draft",
      "priority": "P1",
      "source": "BNTouch Self-Alert campaigns",
      "trigger": {
        "type": "tag_added",
        "tag": "Application Started"
      },
      "steps": [
        {
          "order": 1,
          "delay": "3 days",
          "action": "conditional",
          "condition": "!has_tag('In Processing')",
          "then_action": "internal_notification",
          "message": "ALERT: {{contact.first_name}} {{contact.last_name}} application started 3 days ago but not yet in processing.",
          "description": "Processing delay alert"
        },
        {
          "order": 2,
          "delay": "7 days",
          "action": "conditional",
          "condition": "!has_tag('In Underwriting')",
          "then_action": "internal_notification",
          "message": "ALERT: {{contact.first_name}} {{contact.last_name}} has been in processing for 7 days without UW submission.",
          "description": "Underwriting delay alert"
        },
        {
          "order": 3,
          "delay": "14 days",
          "action": "conditional",
          "condition": "!has_tag('Conditionally Approved')",
          "then_action": "internal_notification",
          "message": "ALERT: {{contact.first_name}} {{contact.last_name}} has been in underwriting for 14 days without approval.",
          "description": "Approval delay alert"
        },
        {
          "order": 4,
          "delay": "21 days",
          "action": "conditional",
          "condition": "!has_tag('Clear to Close')",
          "then_action": "internal_notification",
          "message": "URGENT: {{contact.first_name}} {{contact.last_name}} conditionally approved 21 days ago but not yet CTC.",
          "description": "CTC delay alert"
        }
      ]
