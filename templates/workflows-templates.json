          "order": 5,
          "delay": "-1 hour",
          "relative_to": "appointment",
          "action": "send_sms",
          "template": "sms-appt-reminder-1hr",
          "description": "1-hour reminder SMS"
        }
      ],
      "exit_conditions": [
        {"type": "appointment_cancelled", "action": "stop"},
        {"type": "appointment_rescheduled", "action": "restart"}
      ]
    },

