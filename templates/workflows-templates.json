  "workflows": [
    {
      "id": "wf-new-lead-nurture",
      "name": "New Lead Nurture Sequence",
      "description": "Automated follow-up sequence for new leads",
      "status": "active",
      "trigger": {
        "type": "tag_added",
        "tag": "New Lead"
      },
      "steps": [
        {
          "order": 1,
          "delay": "0 minutes",
          "action": "send_sms",
          "template": "sms-lead-1",
          "description": "Immediate SMS response"
        },
        {
          "order": 2,
          "delay": "5 minutes",
          "action": "send_email",
          "template": "email-lead-welcome-1",
          "description": "Welcome email with rate info"
        },
        {
          "order": 3,
          "delay": "1 day",
          "action": "send_sms",
          "template": "sms-lead-2",
          "description": "Day 1 follow-up SMS"
        },
        {
          "order": 4,
          "delay": "2 days",
          "action": "send_email",
          "template": "email-lead-follow1",
          "description": "Day 2 follow-up email"
        },
        {
          "order": 5,
          "delay": "3 days",
          "action": "send_sms",
          "template": "sms-lead-3",
          "description": "Day 3 SMS - pre-qual offer"
        },
        {
          "order": 6,
          "delay": "5 days",
          "action": "send_email",
          "template": "email-lead-follow2",
          "description": "Day 5 email with value content"
        },
        {
          "order": 7,
          "delay": "7 days",
          "action": "send_sms",
          "template": "sms-lead-4",
          "description": "Day 7 check-in SMS"
        },
        {
          "order": 8,
          "delay": "10 days",
          "action": "send_email",
          "template": "email-lead-follow3",
          "description": "Day 10 final active follow-up"
        },
        {
          "order": 9,
          "delay": "14 days",
          "action": "send_sms",
          "template": "sms-lead-5",
          "description": "Day 14 last SMS"
        },
        {
          "order": 10,
          "delay": "14 days",
          "action": "add_tag",
          "tag": "Long-Term Nurture",
          "description": "Move to long-term nurture"
        },
        {
          "order": 11,
          "delay": "14 days",
          "action": "internal_notification",
          "message": "Lead {{contact.first_name}} {{contact.last_name}} completed initial nurture sequence without converting. Consider manual outreach.",
          "description": "Notify David for manual follow-up"
        }
      ],
      "exit_conditions": [
        {"type": "tag_added", "tag": "Appointment Scheduled"},
        {"type": "tag_added", "tag": "Pre-Qual Started"},
        {"type": "tag_added", "tag": "Do Not Contact"},
        {"type": "replied", "action": "pause_and_notify"}
      ]
    },

    {
      "id": "wf-appointment-reminders",
      "name": "Appointment Reminder Sequence",
      "description": "Automated reminders before scheduled appointments",
      "status": "active",
      "trigger": {
        "type": "appointment_booked",
        "calendar": "any"
      },
      "steps": [
        {
          "order": 1,
          "delay": "0 minutes",
          "action": "send_sms",
          "template": "sms-appt-confirm",
          "description": "Immediate booking confirmation SMS"
        },
        {
          "order": 2,
          "delay": "0 minutes",
          "action": "send_email",
          "template": "email-appt-confirm",
          "description": "Confirmation email with calendar invite"
        },
        {
          "order": 3,
          "delay": "-1 day",
          "relative_to": "appointment",
          "action": "send_sms",
          "template": "sms-appt-reminder-24hr",
          "description": "24-hour reminder SMS"
        },
        {
          "order": 4,
          "delay": "-1 day",
          "relative_to": "appointment",
          "action": "send_email",
          "template": "email-appt-reminder-24hr",
          "description": "24-hour reminder email"
