          "stage": "Pre-Qualification",
          "description": "Move to Pre-Qual stage"
        },
        {
          "order": 4,
          "delay": "2 days",
          "action": "conditional",
          "condition": "!has_tag('Documents Received')",
          "then_action": "send_sms",
          "then_template": "sms-prequal-docs-reminder",
          "description": "Doc reminder if not received"
        },
        {
          "order": 5,
          "delay": "4 days",
          "action": "conditional",
          "condition": "!has_tag('Documents Received')",
          "then_action": "send_email",
