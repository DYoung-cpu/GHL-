    {
      "id": "wf-pre-qual-process",
      "name": "Pre-Qualification Process Workflow",
      "description": "Automated communications during pre-qualification",
      "status": "active",
      "trigger": {
        "type": "tag_added",
        "tag": "Pre-Qual Started"
      },
      "steps": [
        {
          "order": 1,
          "delay": "0 minutes",
          "action": "send_sms",
          "template": "sms-prequal-start",
          "description": "Pre-qual started notification"
        },
        {
          "order": 2,
          "delay": "0 minutes",
          "action": "send_email",
          "template": "email-prequal-started",
          "description": "Pre-qual welcome email with checklist"
